<Window x:Class="MagicTheGatheringArenaDeckMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicTheGatheringArenaDeckMaster"
        xmlns:id="clr-namespace:WPF.InternalDialogs;assembly=WPF.InternalDialogs"
        xmlns:viewModels="clr-namespace:MagicTheGatheringArenaDeckMaster.ViewModels" 
        xmlns:userControls="clr-namespace:MagicTheGatheringArenaDeckMaster.UserControls"
        xmlns:customControls="clr-namespace:WPF.CustomControls;assembly=WPF.CustomControls"
        xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        mc:Ignorable="d"
        Title="MTG Arena Deck Master" Height="960" Width="1280" WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Icon.ico"        
        d:DataContext="{d:DesignInstance {x:Type viewModels:MainWindowViewModel}}"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid x:Name="mainRootGrid" Background="#FF1F1F1F">
        <Grid x:Name="mainInnerGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="filterButton" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                Margin="0,0,0,0" BorderThickness="0" Focusable="False" Background="Transparent" ToolTip="Set Filter"
                                Command="{Binding PopupDialogViewModel.SetFilterViewModel.ShowSetFilterCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Opacity" Value="0.8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Rectangle Width="16" Height="16">
                                <Rectangle.Fill>
                                    <DrawingBrush>
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <DrawingGroup.Children>
                                                    <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                    <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M0.0081,1.9996L6.0001,10.0446 6.0001,15.9996 10.0001,15.9996 10.0001,10.0446 15.9911,1.9996z" />
                                                    <GeometryDrawing Brush="#FF424242" Geometry="F1M14,3L9,9.714 9,15 7,15 7,9.714 2,3z" />
                                                </DrawingGroup.Children>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button>
                        <Button x:Name="settingsButton" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                Margin="0,0,0,0" BorderThickness="0" Focusable="False" Background="Transparent" ToolTip="Settings"
                                Command="{Binding PopupDialogViewModel.SettingsViewModel.ShowSettingsCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Opacity" Value="0.8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Rectangle Width="16" Height="16">
                                <Rectangle.Fill>
                                    <DrawingBrush>
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <DrawingGroup.Children>
                                                    <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0Z" />
                                                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1M10.2123,8C10.2123,9.222 9.2223,10.212 8.0003,10.212 6.7783,10.212 5.7873,9.222 5.7873,8 5.7873,6.778 6.7783,5.788 8.0003,5.788 9.2223,5.788 10.2123,6.778 10.2123,8 M9.9643,3.257C9.8183,3.197,9.6683,3.17,9.5213,3.124L9.1673,1 6.8333,1 6.4803,3.121C6.1853,3.213,5.8993,3.332,5.6253,3.475L3.8753,2.225 2.2253,3.875 3.4773,5.627C3.4053,5.764 3.3183,5.89 3.2573,6.036 3.1973,6.182 3.1703,6.331 3.1243,6.479L1.0003,6.833 1.0003,9.166 3.1213,9.52C3.2133,9.815,3.3313,10.101,3.4753,10.374L2.2253,12.125 3.8753,13.775 5.6273,12.523C5.7643,12.595 5.8893,12.682 6.0353,12.742 6.1813,12.803 6.3313,12.83 6.4793,12.876L6.8333,15 9.1663,15 9.5203,12.879C9.8153,12.787,10.1013,12.668,10.3743,12.525L12.1243,13.775 13.7743,12.125 12.5233,10.373C12.5953,10.236 12.6823,10.11 12.7423,9.964 12.8033,9.818 12.8303,9.669 12.8763,9.521L15.0003,9.167 15.0003,6.834 12.8783,6.48C12.7863,6.185,12.6683,5.899,12.5243,5.625L13.7743,3.875 12.1253,2.225 10.3733,3.477C10.2353,3.405,10.1103,3.318,9.9643,3.257" />
                                                </DrawingGroup.Children>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <TabControl x:Name="tabControl" Margin="0,10,0,0" SelectedIndex="{Binding SelectedTabControlIndex}"
                                    SelectionChanged="TabControl_SelectionChanged">
                            <TabItem Header="Card Collection">
                                <Grid x:Name="cardCollectionMainGrid">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="5,5,5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Search" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"
                                                   Style="{StaticResource DarkThemeTextBlockStyle}" />
                                        <customControls:WatermarkTextBox Grid.Column="1" Watermark="Search" FontSize="16" Width="250" VerticalContentAlignment="Center"
                                                                         Text="{Binding CardCollectionViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" />
                                        <customControls:RoundableToggleButton Grid.Column="2" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsWhiteChecked}">
                                            <Image Source="pack://application:,,,/Images/white.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsWhiteChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="3" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsBlueChecked}">
                                            <Image Source="pack://application:,,,/Images/blue.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsBlueChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="4" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsBlackChecked}">
                                            <Image Source="pack://application:,,,/Images/black.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsBlackChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="5" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsRedChecked}">
                                            <Image Source="pack://application:,,,/Images/red.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsRedChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="6" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsGreenChecked}">
                                            <Image Source="pack://application:,,,/Images/green.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsGreenChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="7" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsColorlessChecked}">
                                            <Image Source="pack://application:,,,/Images/colorless.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsColorlessChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="8" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsMulticolorChecked}">
                                            <Image Source="pack://application:,,,/Images/multicolor.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsMulticolorChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableToggleButton Grid.Column="9" Style="{StaticResource ManaSymbolButtonRound}"
                                                                              IsChecked="{Binding CardCollectionViewModel.IsLandChecked}">
                                            <Image Source="pack://application:,,,/Images/land.png" Width="24" RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Opacity" Value="0.5" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CardCollectionViewModel.IsLandChecked}" Value="True">
                                                                <Setter Property="Opacity" Value="1.0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </customControls:RoundableToggleButton>
                                        <customControls:RoundableButton Grid.Column="10" Margin="5,0,0,0" ToolTip="Advanced filter" CornerRadius="12" 
                                                                        Width="24" Height="24" Opacity="0.75" Padding="2"
                                                                        Command="{Binding CardCollectionViewModel.AdvancedFilterCommand}">
                                            <Image RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Source>
                                                    <BitmapImage UriSource="pack://application:,,,/Images/advanced-filter.png" />
                                                </Image.Source>
                                            </Image>
                                        </customControls:RoundableButton>
                                        <TextBlock Grid.Column="12" Text="Creating Deck" FontSize="18" VerticalAlignment="Center" Foreground="Yellow">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDeckTabEnabled}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    <customControls:ZoomableListBox x:Name="cardListBox" Grid.Row="1" Margin="0,5,0,0" Background="#FF202020" Foreground="#FFFFFFFF"
                                                                    ItemsSource="{Binding CardCollectionViewModel.Cards}"
                                                                    VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Standard" 
                                                                    VirtualizingPanel.ScrollUnit="Pixel">
                                        <customControls:ZoomableListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <vwp:VirtualizingWrapPanel IsItemsHost="True" Orientation="Vertical" SpacingMode="None" StretchItems="False" />
                                            </ItemsPanelTemplate>
                                        </customControls:ZoomableListBox.ItemsPanel>
                                        <customControls:ZoomableListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Image Margin="5" Width="219" Height="306" RenderOptions.BitmapScalingMode="HighQuality">
                                                        <Image.Source>
                                                            <BitmapImage DecodePixelWidth="219" UriSource="{Binding ImagePath}" />
                                                        </Image.Source>
                                                    </Image>
                                                </Grid>
                                            </DataTemplate>
                                        </customControls:ZoomableListBox.ItemTemplate>
                                    </customControls:ZoomableListBox>
                                    <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5,0,0,5"
                                               Text="{Binding ElementName=cardListBox, Path=Items.Count, StringFormat=0 total cards}" />
                                    <id:InternalDialog Grid.Row="0" Grid.RowSpan="2" CloseOnEscape="False" Background="#45000000"
                                                       FocusParent="{Binding ElementName=cardCollectionMainGrid}"
                                                       Visibility="{Binding SetFilterMessageVisibility, FallbackValue=Collapsed, TargetNullValue=Collapsed}">
                                        <Border BorderBrush="White" BorderThickness="2" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock FontSize="24" Padding="50" Style="{StaticResource DarkThemeTextBlockStyle}">
                                                Please select one or more sets from the "Set Filter" at the top left of the window.
                                            </TextBlock>
                                        </Border>
                                    </id:InternalDialog>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Decks" IsEnabled="{Binding IsDeckTabEnabled}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="5,5,5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Search" Margin="0,0,5,0" FontSize="16" VerticalAlignment="Center" />
                                        <customControls:WatermarkTextBox Grid.Column="1" Watermark="Search" FontSize="16" Width="250" 
                                                                         Margin="0,0,5,0" VerticalContentAlignment="Center"
                                                                         Text="{Binding DeckCollectionViewModel.SearchText}" />
                                        <Button Grid.Column="2" Margin="0,0,5,0" Height="28" ToolTip="Add" Command="{Binding DeckCollectionViewModel.AddCommand}"
                                                Content="{StaticResource Add}" Style="{StaticResource DeckHeaderButton}" />
                                        <Button Grid.Column="3" Margin="0,0,5,0" ToolTip="Remove" Command="{Binding DeckCollectionViewModel.RemoveCommand}"
                                                Content="{StaticResource Remove}" Style="{StaticResource DeckHeaderButton}"/>
                                        <Button Grid.Column="4" Margin="0,0,5,0" ToolTip="Edit" Command="{Binding DeckCollectionViewModel.EditCommand}"
                                                Content="{StaticResource Edit}" Style="{StaticResource DeckHeaderButton}"/>
                                        <Button Grid.Column="5" Margin="0,0,5,0" ToolTip="Copy" Command="{Binding DeckCollectionViewModel.CopyCommand}"
                                                Content="{StaticResource Copy}" Style="{StaticResource DeckHeaderButton}"/>
                                        <Button Grid.Column="6" Margin="0,0,5,0" ToolTip="Import" Command="{Binding DeckCollectionViewModel.ImportCommand}"
                                                Content="{StaticResource Import}" Style="{StaticResource DeckHeaderButton}"/>
                                        <Button Grid.Column="7" Margin="0,0,5,0" ToolTip="Export" Command="{Binding DeckCollectionViewModel.ExportCommand}"
                                                Content="{StaticResource Export}" Style="{StaticResource DeckHeaderButton}"/>
                                    </Grid>
                                    <ListView x:Name="decksListView" Grid.Row="1" Margin="0,5,0,0" ItemsSource="{Binding DeckCollectionViewModel.Decks}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Name"
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/4}" />
                                                <GridViewColumn Header="Colors"
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/8}" />
                                                <GridViewColumn Header="# Creatures"
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/17}" />
                                                <GridViewColumn Header="# Instants"
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/19}" />
                                                <GridViewColumn Header="# Soceries"
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/19}" />
                                                <GridViewColumn Header="# Enchantments" 
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/13}" />
                                                <GridViewColumn Header="# Artifacts" 
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/19}" />
                                                <GridViewColumn Header="# Lands" 
                                                                Width="{Binding ElementName=decksListView, Path=ActualWidth, 
                                                                                Converter={StaticResource ArithmeticConverter}, ConverterParameter=/22}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <TextBlock Grid.Row="2" Margin="5,4.5"
                                               Text="{Binding ElementName=decksListView, Path=Items.Count, StringFormat=0 decks}" />
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </Grid>
            <userControls:PopupDialogUserControl Grid.Row="0" DataContext="{Binding PopupDialogViewModel}" />
            <Grid Grid.Row="1">
                <StatusBar>
                    <StatusBarItem>
                        <Button x:Name="aboutButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                Margin="0,0,0,0" BorderThickness="0" Focusable="False" Background="Transparent" ToolTip="About"
                                Command="{Binding PopupDialogViewModel.AboutDialogViewModel.AboutCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Opacity" Value="0.8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Rectangle Width="16" Height="16" Margin="2">
                                <Rectangle.Fill>
                                    <DrawingBrush>
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <DrawingGroup.Children>
                                                    <GeometryDrawing Brush="#00FFFFFF" Geometry="F1M16,16L0,16 0,0 16,0z" />
                                                    <GeometryDrawing Brush="#FFF6F6F6" Geometry="F1M0,8C0,3.582 3.582,0 8,0 12.418,0 16,3.582 16,8 16,12.418 12.418,16 8,16 3.582,16 0,12.418 0,8" />
                                                    <GeometryDrawing Brush="#FF1AA1E2" Geometry="F1M11,7C11,8.104,10.102,9,9,9L9,10 7,10 7,9C7,7.896,7.897,7,9,7L9,5.203C8.841,5.115 8.495,5 8,5 7.505,5 7.159,5.115 7,5.203L7,6 5,6 5,5C5,3.841 6.262,3 8,3 9.738,3 11,3.841 11,5z M9,13L7,13 7,11 9,11z M8,1C4.134,1 1,4.134 1,8 1,11.865 4.134,15 8,15 11.866,15 15,11.865 15,8 15,4.134 11.866,1 8,1" />
                                                    <GeometryDrawing Brush="#FFFFFFFF" Geometry="F1M9,11L7,11 7,13 9,13z M9,10L7,10 7,9C7,7.896,7.897,7,9,7L9,5.203C8.841,5.115 8.495,5 8,5 7.505,5 7.159,5.115 7,5.203L7,6 5,6 5,5C5,3.841 6.262,3 8,3 9.738,3 11,3.841 11,5L11,7C11,8.104,10.102,9,9,9z" />
                                                </DrawingGroup.Children>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button>
                    </StatusBarItem>
                    <StatusBarItem>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#FFBBBBBB" Width="1" Height="18" />
                            <Border Grid.Column="1" Background="#FF222222" Width="1" Height="18" />
                        </Grid>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock Text="{Binding StatusMessage}" />
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </Grid>
    </Grid>
</Window>
