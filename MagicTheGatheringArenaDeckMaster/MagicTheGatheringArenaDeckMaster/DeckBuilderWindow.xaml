                                        <Setter Property="Width" Value="*" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CardViewEightColumnColumnSevenViewModel.Cards.Count}" Value="0">
                                                <Setter Property="Width" Value="Auto" />
                                            </DataTrigger>
                                        </Style.Triggers>
