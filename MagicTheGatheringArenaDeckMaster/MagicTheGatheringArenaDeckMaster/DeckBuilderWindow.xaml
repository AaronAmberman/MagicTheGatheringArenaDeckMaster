                                    <Style TargetType="ColumnDefinition">
                                        <Setter Property="Width" Value="*" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CardViewEightColumnColumnEightViewModel.Cards.Count}" Value="0">
                                                <Setter Property="Width" Value="Auto" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ColumnDefinition.Style>
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <userControls:CardColumnUserControl x:Name="eightColumnCardViewColumnOne" Grid.Column="0" Margin="0,0,10,0"                                                                  
                                                            DataContext="{Binding CardViewEightColumnColumnOneViewModel}" 
                                                            Style="{StaticResource CardColumnFor8Column}"
                                                            ZoomFactor="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:DeckBuilderWindow}}, Path=DataContext.ZoomFactor}" />
                        <userControls:CardColumnUserControl x:Name="eightColumnCardViewColumnTwo" Grid.Column="1" Margin="0,0,10,0"
